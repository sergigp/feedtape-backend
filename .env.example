# Database
DATABASE_URL=postgresql://feedtape:feedtape_dev_password@localhost:5432/feedtape

# Server
HOST=0.0.0.0
PORT=8080

# JWT (REQUIRED - Generate with: openssl rand -base64 32)
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND
JWT_EXPIRATION_HOURS=1
REFRESH_TOKEN_EXPIRATION_DAYS=30

# TTS Configuration
TTS_PROVIDER=openai  # Options: openai, polly (default: openai)
TTS_CACHE_ENABLED=true  # Enable caching of TTS audio (default: false)

# AWS Polly (only needed if TTS_PROVIDER=polly)
AWS_REGION=us-east-1
# Option 1: Set credentials here (for quick local dev)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# Option 2: Use AWS CLI (recommended): Run `aws configure` and leave above commented

# OpenAI TTS (only needed if TTS_PROVIDER=openai)
OPENAI_API_KEY=sk-your-openai-api-key-here
# TTS Models: tts-1 (fast/cheap), tts-1-hd (high quality), gpt-4o-mini-tts (latest with instructions)
OPENAI_TTS_MODEL=tts-1
# Voices: alloy, echo, fable, onyx, nova, shimmer
OPENAI_TTS_VOICE=alloy

# OAuth - Apple
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=./certs/apple-private-key.p8
APPLE_REDIRECT_URI=http://localhost:8080/auth/callback/apple

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/auth/callback/google

# OAuth - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8080/auth/callback/github

# Logging
RUST_LOG=debug
LOG_FORMAT=pretty

# App
ENVIRONMENT=development
